import java.util.Scanner;
public class Main {
    public static void main(String[] args) {

        Scanner scr = new Scanner(System.in);
        System.out.println("Digite quantos anos voce tem:");
        int anos = scr.nextInt();

        System.out.println("Digite quantos meses voce tem:");
        int meses = scr.nextInt();

        System.out.println("digite quantos dia voce tem:");
        int dia = scr.nextInt();
        int diaano = anos * 365 + meses * 30 + dia;
        System.out.println(anos + " anos, " + meses + " meses, " + dia + " dia = " + diaano + " dias");
    }
}
